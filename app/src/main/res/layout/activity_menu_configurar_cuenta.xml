<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/myActionBar"
        layout="@layout/actionbar2"
        >
    </include>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Petagram"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/nombreMascota"/>

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:hint="Escribe tu usuario"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="*  los usuarios que han aceptado la petición sandbox, los cuales, pueden ser el usuario principal de la aplicación son 'perritopaco', 'niko_pty' y 'gatoulises' "
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/etButtonGuardarUser"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimary"
        android:text="Guardar cuenta"
        android:textColor="@color/colorAccent"/>

</LinearLayout>